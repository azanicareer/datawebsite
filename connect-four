        .container {
            margin: 20px auto;
            max-width: 600px;
        }

        h1 {
            font-size: 24px;
        }

        .board {
            display: grid;
            grid-template-columns: repeat(7, 50px);
            grid-gap: 5px;
            margin-top: 20px;
        }

        .cell {
            width: 50px;
            height: 50px;
            background-color: #ccc;
            border: 1px solid #999;
            border-radius: 50%;
            cursor: pointer;
        }

        .cell.empty {
            background-color: white;
        }

        #reset {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
